</head>
<body id="circ_view_holdsqueue" class="circ">
[% INCLUDE 'header.inc' %]
[% INCLUDE 'cat-search.inc' %]
<link rel="stylesheet" type="text/css" href="[% themelang %]/css/datatables.css" />
[% INCLUDE 'datatables.inc' %]
<script type="text/javascript">//<![CDATA[
$(document).ready(function() {
    $("#holdst").dataTable({
        "aaSorting": [[ 3, "asc" ]],
        "aoColumns": [
            { "sType": "anti-the" },null,null,null,null,null,null,null,null,{ "sType": "title-string" },null,{ "bSortable": false }
        ],
        "sDom": 't',
        "bPaginate": false
    });
});

function Dopop(link) {
    window.open(link, 'popup', 'width=600,height=400,resizable=1,toolbar=0,scrollbars=1,top');
}

function FillReserve( reserve_id, a, cancel ) {
    a.closest('td').prepend('<img src="[% interface %]/[% theme %]/img/loading-small.gif"/>');
    a.closest('div').hide();
    $.ajax({
        type: "POST",
        url: '/cgi-bin/koha/svc/hold/fill',
        data: {
            reserve_id: reserve_id
        },
        success: function( data ) {
            a.closest('tr').remove();
        },
        dataType: 'json' 
    });
}

function CancelReserve( reserve_id, a ) {
    cancel = prompt("Reason for cancelation:");
    if ( cancel == null ) {
        return;
    }

    a.closest('td').prepend('<img src="[% interface %]/[% theme %]/img/loading-small.gif"/>');
    a.closest('div').hide();
    $.ajax({
        type: "POST",
        url: '/cgi-bin/koha/svc/hold/cancel',
        data: {
            reserve_id: reserve_id,
            note: cancel
        },
        success: function( data ) {
            a.closest('tr').remove();
        },
        dataType: 'json' 
    });
}
//]]>
</script>

